                                                {% if progress < 25 %}
                                                    {% set progressClass = 'bg-danger' %}
                                                {% elseif progress >= 25 and progress < 50 %}
                                                    {% set progressClass = 'bg-warning' %}
                                                {% elseif progress >= 50 and progress < 75 %}
                                                    {% set progressClass = 'bg-primary' %}
                                                {% else %}
                                                    {% set progressClass = 'bg-success' %}
                                                {% endif %}
                                                <td>
                                                    <div class="progress progress-xs">
                                                        <div class="progress-bar {{ progressClass }}" style="width: {{ progress|round(2, 'floor') }}%"></div>
                                                    </div>
                                                </td>
                                                <td><span class="badge {{ progressClass }}">{{ progress|round(2, 'floor') }}%</span></td>
                                            </tr>
