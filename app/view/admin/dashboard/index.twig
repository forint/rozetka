                                                <td class="film-id">{{ film.id }}.</td>
                                                <td>{{ film.title }}</td>
                                                <td class="film-session" data-toggle="modal" data-target="#myModal"><span class="film-session-round">{{ sessionsSeats[film.id][10]|length }}</span></td>
