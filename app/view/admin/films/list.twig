    <script src="/vendor/twbs/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="/vendor/almasaeed2010/adminlte/dist/js/adminlte.min.js"></script>
{% endblock %}

{% block title %}Dashboard!{% endblock %}

{% block body %}
