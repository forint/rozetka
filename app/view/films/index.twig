                                            <!-- Material input name -->
                                            <div class="md-form form-sm">
                                                <i class="fa fa-envelope prefix"></i>
                                                <input name="username" type="text" id="booking-username" class="form-control form-control-sm" placeholder="Ваше имя" required>
                                                <div class="valid-feedback">
                                                    Отлично
                                                </div>
                                                <div class="invalid-feedback">
                                                    Пожалуйста введите имя
                                                </div>
                                            </div>

                                            <!-- Material input email -->
                                            <div class="md-form form-sm">
                                                <i class="fa fa-lock prefix"></i>
                                                <input name="email" type="email" id="booking-email" class="form-control form-control-sm" placeholder="Ваш e-mail" required>
                                                <div class="valid-feedback">
                                                    Отлично
                                                </div>
                                                <div class="invalid-feedback">
                                                    Пожалуйста введите email
                                                </div>
                                            </div>

                                            <!-- Material input subject -->
                                            <div class="md-form form-sm">
                                                <i class="fa fa-tag prefix"></i>
                                                <input name="phone" type="tel" id="booking-phone" class="form-control form-control-sm" placeholder="Ваш телефон" pattern="(?:\+38)?(?:\(044\)[ -]?[0-9]{3}[ -]?[0-9]{2}[ -]?[0-9]{2}|044[ -]?[0-9]{3}[ -]?[0-9]{2}[ -]?[0-9]{2}|044[0-9]{7}" required>
